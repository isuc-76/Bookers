<h2>Books</h2>
<div class="clearfix">

  
  <div class="book-title">
  	<p class="name">title</p>
	<% @books.each do |book| %>
		<span><%= book.title %></span>
	<% end %>
  </div>

  <div class="book-body">
  	<p class="name">body</p>
	<% @books.each do |book| %>
		<span><%= book.body %></span>
	<% end %>
  </div>


</div>