<div class="successfully">
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
</div>

<div class="index">
<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @books.each do |book| %>
      <tr>
        <td class="tb"><%= book.title %></td>
		    <td class="tb"><%= book.body %></td>

        <td class="tb"><%= link_to "Show", book_path(book) %></td>
        <td class="tb"><%= link_to "Edit", edit_book_path(book) %></td>
        <td class="tb"><%= link_to "Destroy", book, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="new">
<h3 class="new-title">New book</h3>
<%= form_for(@book,url:"/books") do |f| %>
  
  <% if @book.errors.any? %>
    <div class="error">
      <p class="error-top">
        <%= pluralize(@book.errors.count, "error") %> 
        prohibited this book from being saved:
      </p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

	<p>Title</p>
    <%= f.text_field :title %>
 
    <p>Body</p>
    <%= f.text_area :body %><br>
 
    <%= f.submit 'Create Book' %>
 
<% end %>
</div>