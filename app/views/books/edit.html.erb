<h1>Editing Book</h1>

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

<% if @book.errors.any? %>
    <div id="error_explanation">
      <p>
        <%= pluralize(@book.errors.count, "error") %> 
        prohibited this book from being saved:
      </p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
	</div>
  <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %><br>
    <%= f.submit 'Update Book' %>    
<% end %>
